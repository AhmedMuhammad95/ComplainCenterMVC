@model NetworkComplainCenter.Models.ComputerResult
@{
    var computers = Model.Computers;

    var ps = Model.PageSize;
    var cp = Model.CurrentPage;
    var total = Math.Ceiling((double)Model.TotalComputers / ps);

    ViewBag.Title = "Index";
}

<body class="dashboard-page">
    <div class="agile-grids">
        <div class="w3l-table-info">
            <h3>Computers</h3>
            <div>
                <button class="hvr-icon-float-away col-10" style="height:50px">New Computer</button>
                <div class="w3l_search">
                    @using (Html.BeginForm("Index", "Computer", FormMethod.Get))
                    {
                        <input type="text" name="keyword" placeholder="Search">
                        <button class="btn btn-default" type="submit">
                            <i class="fa fa-search" aria-hidden="true"></i>
                        </button>
                    }
                </div>
            </div>


            <table id="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Location</th>
                        <th>Delete/Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in computers)
                    {
                        <tr role="row" class="even">

                            <td class="sorting_1">@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.ComputerStatus.Name</td>
                            <td>@item.Location.Name</td>
                            <td><span class="glyphicon glyphicon-remove"></span> &nbsp;<span class="glyphicon glyphicon-edit"></span></td>
                        </tr>
                    }
                    </tbody>
            </table>
            <div class="w3l_search">
                @{
                    var _totalrecords = 0;
                }
                @if (cp + 1 == total && (ps * total) > Model.TotalComputers)
                {
                    _totalrecords = Model.TotalComputers;
                }
                else
                {
                    _totalrecords = ps * (cp + 1);
                }

                <div class="dataTables_info" id="example_info" role="status" aria-live="polite">
                    Showing @Html.Raw((ps * cp) + 1) to  @Html.Raw(_totalrecords) of @Model.TotalComputers entries
                </div>
            </div>
            <ul class="pagination">
                @if (cp > 0)
                {
                    <li class="paginate_button previous" id="example_previous">
                          <a href="@Url.Action("Index", new { p = cp-1 })" aria-controls="example" data-dt-idx="0" tabindex="0">Previous</a>
                    </li>
                }


                @for (int i = 0; i < total; i++)
                {
                    <li class="paginate_button">
                       <a href="@Url.Action("Index", new { p = i })" aria-controls="example" data-dt-idx="1" tabindex="0">@Html.Raw(i + 1)</a>
                   </li>
                }

                @if (cp < total - 1)
                {
                   <li class="paginate_button next" id="example_next">
                       <a href="@Url.Action("Index", new { p = cp + 1 })" aria-controls="example" data-dt-idx="7" tabindex="0">Next</a>
                  </li>
                }
            </ul>
        </div>
    </div>
</body>