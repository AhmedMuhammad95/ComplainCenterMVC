<div class="w3agile-validation">
    <div class="panel panel-widget agile-validation">
        <div class="my-div">
            <form method="post" action="#" class="valida" autocomplete="off" novalidate="novalidate">

                <div class="input-info">
                    <h3>New Complain</h3>
                </div>

                <div class="form-group">
                    <input type="text" name="title" placeholder="Title" id="field-1" required="true" class="form-control">
                    <br />
                    <input type="text" name="computer#" placeholder="Computer#" id="field-1-3" required="true" filter="greater_than:0|less_than:15" class="form-control" data-required="Given value must be between 1 and 15">
                </div>

                <div class="row">

                    <div class="col-xs-12 col-sm-5">
                        <div class="form-group">
                            <select name="department" id="department" required="true" class="form-control at-required">
                                <option value="">Select Department</option>
                                <option value="val-1">SRO</option>
                                <option value="val-2">Accounts</option>
                                <option value="val-3">Examination</option>
                                <option value="val-4">Lab</option>
                            </select>
                        </div>

                    </div>

                    <div class="col-xs-12 col-sm-7">

                        <div class="form-group">
                            <input type="text" name="room#" placeholder="Room#" id="field-1-4-2" required="true" filter="greater_than:0|less_than:1000" class="form-control" data-required="Given value must be between 1 and 1000">
                        </div>

                    </div>

                </div>

                <hr>

                <h4>Status</h4>

                <div class="">
                    <select name="field-2" id="field-2" required="true" class="form-control at-required">
                        <option value="val-1">New</option>
                        <option value="val-2">Resolved</option>
                        <option value="val-3">Not Resolved</option>
                        <option value="val-4">Colsed</option>
                        <option value="val-5">Reopened</option>
                        <option value="val-6">Duplicate</option>
                    </select>
                </div>
                <br />
                <p>
                    <input type="submit" name="sub-1" value="Submit" class="btn btn-primary">
                    <input type="reset" name="res-1" id="res-1" value="Reset" class="btn btn-danger">
                </p>
            </form>
        </div>
    </div>
</div>